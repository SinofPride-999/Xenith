{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Xenith",
  "scopeName": "source.xenith",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#builtins" },
    { "include": "#list_operations" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.xenith",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.xenith",
          "match": "\\b(VAR|AND|OR|NOT|IF|ELIF|ELSE|FOR|TO|STEP|WHILE|FUN|RETURN|CONTINUE|BREAK)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.xenith",
          "match": "\\b(INT|FLOAT|STRING|BOOL|VOID)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.xenith",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.xenith",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.xenith",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.xenith",
          "match": "\\+|\\-|\\*|/|\\^|==|!=|<=|>=|<|>|=|\\?|:"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.bracket.xenith",
          "match": "[{}()\\[\\],]"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.xenith",
          "match": "\\bFUN\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.function.xenith" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.declaration.xenith",
          "match": "\\bVAR\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "variable.other.xenith" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.xenith",
          "match": "\\b(PRINT|PRINT_RET|LEN|IS_NUM|IS_STR|IS_LIST|IS_FUN|EXTEND)\\b"
        }
      ]
    },
    "list_operations": {
      "patterns": [
        {
          "name": "keyword.operator.list.xenith",
          "match": "/|APPEND|POP"
        }
      ]
    }
  }
}
